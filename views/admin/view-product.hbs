<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">add product</a>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col"></th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 60px;height:60px" src='/public-images/{{this._id}}.jpg' alt=""></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </container>
</section>